{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "WATCHER",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "buildwatcher",
			"program": "${workspaceFolder}/fileWatcher/bin/Debug/netcoreapp3.0/fileWatcher.dll",
			"args": ["./spindll/bin/Debug/netcoreapp3.0/spindll.dll",
				"./spindll/_testOutputs"],
			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"stopAtEntry": false
		},
        {
            "name": "SPINDLL",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildspindll",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/spindll/bin/Debug/netcoreapp3.0/spindll.dll",
			"args": ["./spindll/bin/Debug/netcoreapp3.0/spindll.dll",
				"./spindll/_testOutputs"],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
		},
		{
            "name": "SPINDLL.CLI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildspindll",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/spindll.cli/bin/Debug/netcoreapp3.0/spindll.cli.dll",
			"args": ["-w",
				"-i ./spindll/bin/Debug/netcoreapp3.0/spindll.dll",
				"-o ./spindll/_testOutputs"],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        }
	]
}